[colors]
transparent                   = #00000000
background                    = #0F1C32
foreground                    = #778892
alert                         = #DAD9D4

[settings]
screenchange-reload           = true
pseudo-transparency           = true

[global/wm]
margin-top                    = 0
margin-bottom                 = 0

[bar/base]
monitor                       = ${env:MONITOR}
locale                        = pt_BR.UTF-8
dpi                           = 96

## BOTTOM CENTER
[bar/bottom-center]
inherit                       = bar/base
height                        = 20
width                         = 10%
offset-x                      = 45%
offset-y                      = 15

fixed-center                  = true
bottom                        = true

modules-center                = bspwm

background                    = ${colors.transparent}
foreground                    = ${colors.foreground}

font-0                        = Fira Mono:style=Regular:size=8;2
font-1                        = Material Icons:style=Regular:size=8;2

## TOP RIGHT
[bar/top-right]
inherit                       = bar/base
height                        = 20
width                         = 250
offset-x                      = 100%:-270
offset-y                      = 15

fixed-center                  = true
modules-right                 = date

background                    = ${colors.transparent}
foreground                    = ${colors.background}

font-0                        = Fira Mono:style=Regular:size=8;2
font-1                        = Material Icons:style=Regular:size=8;2

## TOP LEFT
[bar/top-left]
#monitor                       = ${env:MONITOR}
height                        = 20
width                         = 150
offset-x                      = 20
offset-y                      = 15

fixed-center                  = true
modules-left                  = date

background                    = ${colors.transparent}
foreground                    = ${colors.background}

font-0                        = Fira Mono:style=Regular:size=8;2
font-1                        = Material Icons:style=Regular:size=8;2

## BOTTOM LEFT
[bar/bottom-left]
inherit                       = bar/base
height                        = 20
width                         = 950
offset-x                      = 20
offset-y                      = 15

fixed-center                  = true
modules-left                  = pulseaudio music
bottom                        = true

background                    = ${colors.transparent}
foreground                    = ${colors.foreground}

font-0                        = Fira Mono:style=Bold:size=8;1
font-1                        = Material Icons:style=Regular:size=12;2

## BOTTOM RIGHT
[bar/bottom-right]
inherit                       = bar/base
height                        = 20
width                         = 150
offset-x                      = 100%:-170
offset-y                      = 15

fixed-center                  = true
modules-right                 = powermenu
bottom                        = true

background                    = ${colors.transparent}
foreground                    = ${colors.foreground}

font-0                        = Fira Mono:style=Regular:size=8;1
font-1                        = Material Icons:style=Regular:size=12;2

## MODULES
[module/bspwm]
type                          = internal/bspwm

label-focused                 = 
label-focused-padding         = 1
label-focused-foreground      = ${colors.foreground}

label-occupied                = 
label-occupied-padding        = 1
label-occupied-foreground     = ${colors.foreground}

label-urgent                  = %index%!
label-urgent-background       = ${colors.alert}
label-urgent-padding          = 1

label-empty                   = 
label-empty-padding           = 1
label-empty-foreground        = ${colors.foreground}

[module/date]
type                          = internal/date
interval                      = 5
date                          = "%d %b"
date-alt                      = "%A %d %b"
time                          = %H:%M
time-alt                      = %H:%M
label                         = %date% | %time%

[module/pulseaudio]
type                          = internal/pulseaudio

use-ui-max                    = false
interval                      = 5

format-volume                 = <ramp-volume>
format-muted                  = <label-muted>

label-volume                  = %percentage%%
label-muted                   = ""

ramp-volume-0                 = ""
ramp-volume-1                 = ""
ramp-volume-2                 = ""

[module/music]
type                          = custom/script
exec                          = $HOME/.config/polybar/scripts/mediaplayer.py
exec-if                       = pgrep -x spotify
interval                      = 1

label                         = "%{T2}%{T-} %output:0:120:..%"
format-padding                = 1

click-left                    = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
click-middle                  = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
click-right                   = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

[module/powermenu]
type                          = custom/menu
expand-right                  = true

format-spacing                = 2

label-open                    = ""
label-close                   = ""
label-separator               = |

menu-0-0                      = ""
menu-0-0-exec                 = sudo shutdown -r now
menu-0-1                      = ""
menu-0-1-exec                 = sudo shutdown -h now
